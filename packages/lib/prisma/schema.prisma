// Client Models ===========================================================================================================================================================
// ==========================================================================================================================================================================
// ==========================================================================================================================================================================

model Client {
  id         String    @id @default(uuid())
  user       User      @relation(fields: [userId], references: [id])
  userId     String
  name       String
  email      String
  phone      String
  projects   Project[]
  isArchived Boolean   @default(false)
  // paymentMethods PaymentMethod[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@unique([userId, email])
}

